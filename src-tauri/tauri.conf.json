{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "file-manager",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"all": false,
				"open": true
			}
		},
		"systemTray": {
			"iconPath": "icons/icon.png",
			"iconAsTemplate": true,
			"title": "File Manager",
			"menuOnLeftClick": true
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "me.souvlaki.explorer",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "File Manager",
				"width": 800,
				"height": 600
			}
		]
	}
}
